{% schema %}
{
  "name": "Header Info Bar",
  "settings": [
    {
      "type": "text",
      "id": "hotline_number",
      "label": "Hotline Number",
      "default": "+84 123 456 789"
    },
    {
      "type": "text",
      "id": "open_hours",
      "label": "Open Hours",
      "default": "Mon - Sat: 9am - 8pm"
    },
    {
      "type": "text",
      "id": "store_location",
      "label": "Store Location",
      "default": "123 Nguyễn Huệ, Quận 1, TP.HCM"
    }
  ],
  "presets": [
    {
      "name": "Header Info Bar"
    }
  ]
}
{% endschema %}

<style>
  .header-info-bar {
    display: flex;
    justify-content: center;
    align-items: center;
    background: linear-gradient(135deg, rgb(128, 0, 50), rgb(102, 0, 38));
    color: white;
    padding: 10px 20px;
    font-size: 12px;
    gap: 30px;
    flex-wrap: wrap;
  }
  

  .header-info-item {
    display: flex;
    align-items: center;
    gap: 8px;
    margin-right: 34px;
  }

  .header-info-icon {
    width: 24px;
    height: 24px;
    fill: white;
    margin-right: 6px;
  }

  @media (max-width: 768px) {
    .header-info-bar {
      display: none; /* Hide on mobile */
    }
  }
</style>

<div class="header-info-bar">
  <div class="header-info-item">
    <svg class="header-info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path d="M6.62 10.79a15.91 15.91 0 006.59 6.59l2.2-2.2a1 1 0 011.11-.21 11.72 11.72 0 003.64.58 1 1 0 011 1v3.34a1 1 0 01-1 1A16 16 0 014 5a1 1 0 011-1h3.34a1 1 0 011 1 11.72 11.72 0 00.58 3.64 1 1 0 01-.21 1.11z"/>
    </svg>
    <div>
      <strong>Hotline:</strong><br>
      <span>{{ section.settings.hotline_number }}</span>
    </div>
  </div>

  <div class="header-info-item">
    <svg class="header-info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path d="M12 7a1 1 0 011 1v4h3a1 1 0 110 2h-4a1 1 0 01-1-1V8a1 1 0 011-1zm0-5a10 10 0 100 20 10 10 0 000-20z"/>
    </svg>
    <div>
      <strong>Giờ mở cửa:</strong><br>
      <span>{{ section.settings.open_hours }}</span>
    </div>
  </div>

  <div class="header-info-item">
    <svg class="header-info-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
      <path d="M12 2a7 7 0 00-7 7c0 5.25 7 13 7 13s7-7.75 7-13a7 7 0 00-7-7zm0 9.5a2.5 2.5 0 112.5-2.5 2.5 2.5 0 01-2.5 2.5z"/>
    </svg>
    <div>
      <strong>Địa chỉ:</strong><br>
      <span>{{ section.settings.store_location }}</span>
    </div>
  </div>
</div>
