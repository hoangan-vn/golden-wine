    /* background: linear-gradient(rgb(0, 0, 0) 77%, #fdbb2d 50%); */
    /* background-repeat: no-repeat; */
    background: linear-gradient(to bottom, #2b0000, transparent);
  }
  .custom-info {
    margin: 0px;
  }
</style>

