    }

    .site-footer a:hover {
      text-decoration: underline;
    }

    .footer-container h4 {
      color: white;
    }

    .social-icons a svg {
      fill: white;
      transition: fill 0.3s ease;
    }

    @media (max-width: 768px) {
      .footer-container {
        grid-template-columns: 1fr !important;
        gap: 1.5rem !important;
        padding: 30px 16px !important;
      }

      .footer-container > div {
        margin-bottom: 20px;
      }

      .social-icons {
        justify-content: start;
        flex-wrap: wrap;
        gap: 12px;
      }

      .social-icons a svg {
        width: 22px;
        height: 22px;
      }
    }

    .social-icons a[aria-label="Facebook"]:hover svg { fill: #1877F2; }
    .social-icons a[aria-label="Instagram"]:hover svg { fill: #E1306C; }
    .social-icons a[aria-label="TikTok"]:hover svg { fill: rgb(0, 0, 0); }
    .social-icons a[aria-label="LinkedIn"]:hover svg { fill: #0A66C2; }
    .social-icons a[aria-label="YouTube"]:hover svg { fill: #FF0000; }

  .compliance-notice {
    padding: 5px 20px 40px; /* top 20px, left/right 20px, bottom 30px */
    text-align: justify;
    font-size: 12px;
    line-height: 1.6;
    color: white;
    width: 100%;
    box-sizing: border-box;
    {% comment %} max-width: 900px; {% endcomment %}
    margin: 0 auto; /* centered */
    background: black !important;
  }

  }
  .compliance-notice strong {
    display: block;
    margin-top: 8px;
    text-align: center;
  }
  .compliance-warnings {
    text-align: center;
    padding-top: 10px;
  }
  .footer-info-company {
